import Blob from "../components/Blob.astro";
import Button from "../components/Button.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="edge-blobs">
    <Blob kind="solid-fill-03" top="75%" left="-10rem"></Blob>
  </div>
  <div class="container">
    <Blob kind="grad-dots-04" top="-2%" right="-20rem"></Blob>
    <Blob kind="solid-fill-05" top="20%" left="-16rem"></Blob>
    <Blob kind="solid-fill-04" top="90%" right="-20rem"></Blob>

    <main id="main-content">
      <section>
        <h1>We couldn't find this page…</h1>

        <p>
          …but we hope to find funding for the Open Source projects we all depend on. Are you ready to do your part?
        </p>
      </section>

      <section class="flex-center bottom-cta">
        <div>
          <div class="text-center">
            <Button href="/join"
              >Join the Pledge</TextButton
            >
          </div>
        </div>
      </section>
    </main>
  </div>
</Layout>

<style>
  h1 {
    font-size: 3rem;
  }
  p {
    font-size: 1.8rem;
  }
</style>
