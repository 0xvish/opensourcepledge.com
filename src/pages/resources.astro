import Blob from "../components/Blob.astro";
import Button from "../components/Button.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Resources">
  <div class="edge-blobs">
    <Blob kind="solid-fill-03" top="42%" left="-13rem"></Blob>
    <Blob kind="grad-dots-06" top="37%" right="-5rem"></Blob>
  </div>
  <div class="container">
    <Blob kind="solid-fill-05" top="20%" right="-16rem"></Blob>
    <Blob kind="solid-fill-04" top="90%" left="-20rem"></Blob>
    <Blob kind="grad-dots-03" top="10%" left="-15rem"></Blob>

    <main id="main-content">
      <section>
        <h1>Resources</h1>
        <p>Go make stickers!</p>
      </section>
      <section class="resource">
        <h2>Logo</h2>
        <img src="/resources/stickers/open-source-pledge-logo-sticker.svg">
        <Button href="/resources/stickers/open-source-pledge-logo-sticker.png">PNG</Button>
        <Button href="/resources/stickers/open-source-pledge-logo-sticker.svg">SVG</Button>
      </section>
      <section class="resource">
        <h2>Money Machine</h2>
        <img src="/resources/stickers/open-source-pledge-money-machine.png">
        <Button href="/resources/stickers/open-source-pledge-money-machine.png">PNG</Button>
      </div>
    </section>
  </div>
</Layout>

<style>
  .resource {
    img {
      display: block;
      max-width: 20rem;
      margin: 2rem 0;
    }
  }
</style>
